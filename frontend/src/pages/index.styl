body
  margin 0
  font-family sans-serif
  font-size 16px!important

h1
  font-size 1.5rem

input
  font-size inherit

button
  font-size inherit

.wrapper
  display flex
  flex-direction column
  max-width 360px
  min-height: 100vh
  margin 0 auto

.header
  flex initial
  padding 1rem 0

.logo
  padding 0.5rem

.main
  flex auto
  display flex
  flex-direction column
  text-align center
  position relative

.confetti
  position absolute
  left 50%
  top 4rem
  transform translateX(-50%)
  z-index 1

.result
  position relative
  z-index 2
  box-shadow 0px 0px 15px #ddd
  padding 1.3rem
  background-color #fff
  margin 3rem

  .content
    margin 0
    padding 1rem
    font-size 1.4rem
    line-height 1.4
    border-bottom 1px solid #ccc

  .truth
    display block

  dl
    width 80%
    margin 1rem auto
    overflow hidden

    dt, dd
      margin 0
      text-align left

  .product-title
    float left

  .product-name
    padding-left 0.7rem
    margin 0
    overflow hidden
    word-break keep-all

  .barcode-title
    display inline-block

  .barcode-info
    display inline-block
    margin-left: 0.5em


.result__actions
  display flex
  justify-content space-between

  button
    font-size 0.9rem
    color #888
    margin-top 3em

  .report-link
    font-size 0.9rem
    color #888
    margin-top 3rem
    padding 1rem

.emoji
  font-size 2em

#interactive
  position relative
  width: 90%

  canvas, video
    position absolute
    top 0
    left 0

.footer
  flex initial
  padding 1rem 0

  span
    padding 0.5rem

.logo
  height 1.5rem
  